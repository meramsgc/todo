<h1>Lists</h1>
<div class="table-responsive">
<table class="table">
    <thead>
    	<th>ID</th>
    	<th>Title</th>
    	<th>Actions</th>
    </thead>
    <tbody>
    	<% @lists.each do |t| %>
    	   <tr>
    	       <td><%= t.id %></td>
    	       <td><%= t.title%></td>
    	       <td><%= link_to "Edit", edit_list_path(t) %> | <%= link_to "Delete", list_path(t),
    	           data: {:confirm => 'Are you sure'}, :method =>  :delete %></td>
    	           </tr>
    	           <%end%>

    </tbody>>
    </table>
    </div>